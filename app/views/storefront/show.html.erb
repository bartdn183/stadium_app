<div class="box">
<div class="row">
	<% @products_by_vendor.each do |product| %>
		<div class="col-sm-3">
			
			<div class="panel panel-default">
					<%= button_to line_items_path(product_id: product) do %>
					<div class="size">
						<p style="font-size:22px"><strong><%= product.name %></strong></p>
						<p><%= image_tag product.image.url(:thumb) %></p>
						<p><%= number_to_currency product.price %></p>
						<p><%= product.description %></p>
					</div>
					<% end %>
		
				
			</div>
		</div>
	<% end %>
</div>
</div>

